1. sudo apt-get update
2. sudo apt-get upgrade
3. mysql -V
4. sudo systemctl stop mysql.service 
   sudo systemctl stop mysql
5. sudo systemctl status mysql.service
6. sudo systemctl set-environment MYSQLD_OPTS="--skip-networking --skip-grant-tables"
7. sudo mysqld_safe --skip-grant-tables &
8. mysql -u root
9. flush privileges;
10. USE mysql;
11. ALTER USER 'root'@'localhost' IDENTIFIED BY 'password';
12. flush privileges;
13. exit;
14. sudo systemctl unset-environment MYSQLD_OPTS
15. sudo killall -u mysql
16. sudo systemctl stop mysql.service
17. sudo systemctl start mysql.service
